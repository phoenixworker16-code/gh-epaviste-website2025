{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "buildCommand": "npm install --legacy-peer-deps && npx prisma generate --engine-type=binary && next build",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    }
  }
}